<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:orientation="vertical"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:id="@+id/fhgk"
android:layout_width="match_parent"
android:layout_height="match_parent"
xmlns:fancy="http://schemas.android.com/apk/res-auto"
android:background="#000000ff"
    android:gravity="center_vertical|center_horizontal">


<ScrollView
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:id="@+id/scrollView3"
    android:layout_alignRight="@+id/linearLayout"
    android:layout_alignEnd="@+id/linearLayout"
    android:layout_alignParentRight="false"
    android:background="#000000ff">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:foregroundGravity="center"
        android:gravity="center"
        android:background="#00ffffff">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">

            <mehdi.sakout.fancybuttons.FancyButton
                android:id="@+id/BusinessB"
                android:layout_width="260dp"
                android:layout_height="70dp"
                android:padding="10dp"
                fancy:fb_borderColor="#e9e9e9"
                fancy:fb_borderWidth="4dp"

                fancy:fb_fontIconResource="&#xf285;"
                fancy:fb_defaultColor="#b869da"
                fancy:fb_focusColor="#FF1E74FF"
                fancy:fb_iconPosition="left"
                fancy:fb_text="Sartha Sanchar"
                fancy:fb_textColor="#ffffff"
android:onClick="sanchar"
                fancy:fb_fontIconSize="50dp"
                fancy:fb_radius="100dp"
                android:layout_margin="10dp" />

            <TextView
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:text="Sartha Sanchar (up to 10,000/-)  LTV : 85% ROI : 2.5% "
                android:id="@+id/textView68"
                android:layout_gravity="center_horizontal"
                android:textSize="12dp" />

            <mehdi.sakout.fancybuttons.FancyButton
                android:id="@+id/BusinessE"
                android:layout_width="260dp"
                android:layout_height="70dp"
                android:padding="10dp"
                fancy:fb_borderColor="#e9e9e9"
                fancy:fb_borderWidth="4dp"
                android:onClick="sancharplus"

                fancy:fb_fontIconResource="&#xf0d0;"
                fancy:fb_defaultColor="#85ac10"
                fancy:fb_focusColor="#FF1E74FF"
                fancy:fb_iconPosition="left"
                fancy:fb_text="Sartha Sanchar Plus  "
                fancy:fb_textColor="#ffffff"

                fancy:fb_fontIconSize="50dp"
                fancy:fb_radius="100dp"
                android:layout_margin="10dp" />

            <TextView
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:text="Sartha Sanchar Plus  (10,000/- to 15,000/-)  LTV : 85% ROI : 2.5% "
                android:id="@+id/textView70"
                android:textSize="12dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">

            <mehdi.sakout.fancybuttons.FancyButton
                android:id="@+id/BusinessT"

                android:onClick="samriddhi"
                fancy:fb_fontIconSize="40dp"
                fancy:fb_borderColor="#e9e9e9"
                fancy:fb_borderWidth="4dp"
                android:layout_width="260dp"
                android:layout_height="70dp"
                android:paddingBottom="10dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="10dp"
                fancy:fb_defaultColor="#c68804"
                fancy:fb_focusColor="#FF1E74FF"
                fancy:fb_fontIconResource="&#xf1d5;"
                fancy:fb_iconPosition="left"
                fancy:fb_radius="100dp"
                fancy:fb_text="Sartha Samriddhi"
                fancy:fb_textColor="#FFFFFF"
                android:layout_margin="10dp" />

            <TextView
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:text="Sartha Samriddhi (up to 10,000/-)  LTV : 85% ROI 2.5% "
                android:id="@+id/textView71"
                android:textSize="12dp" />

            <mehdi.sakout.fancybuttons.FancyButton
                android:id="@+id/BusinessC"
                fancy:fb_fontIconSize="40dp"
                fancy:fb_borderColor="#e9e9e9"
                fancy:fb_borderWidth="4dp"
                android:layout_width="260dp"
                android:layout_height="70dp"
                android:paddingBottom="10dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="10dp"
                fancy:fb_defaultColor="#5466d1"
                fancy:fb_focusColor="#FF1E74FF"
                fancy:fb_fontIconResource="&#xf18c;"
                android:onClick="samriddhiplus"
                fancy:fb_iconPosition="left"
                fancy:fb_radius="100dp"
                fancy:fb_text="Sartha Samriddhi Plus"
                fancy:fb_textColor="#FFFFFF"
                android:layout_margin="10dp" />

            <TextView
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:text="Sartha Samriddhi Plus (10,000/- to 15,000/-)  LTV : 85% ROI 2.5% "
                android:id="@+id/textView72"
                android:textSize="12dp" />


            <mehdi.sakout.fancybuttons.FancyButton
                android:id="@+id/other"
                fancy:fb_fontIconSize="40dp"
                fancy:fb_borderColor="#e9e9e9"
                fancy:fb_borderWidth="4dp"
                android:layout_width="260dp"
                android:layout_height="70dp"
                android:paddingBottom="10dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="10dp"
                fancy:fb_defaultColor="#5466d1"
                fancy:fb_focusColor="#FF1E74FF"
                fancy:fb_fontIconResource="@string/icon_list"
                android:onClick="other"
                fancy:fb_iconPosition="left"
                fancy:fb_radius="100dp"
                fancy:fb_text="Other"
                fancy:fb_textColor="#FFFFFF"
                android:layout_margin="10dp"
                android:visibility="gone" />

            <TextView
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:text="Sartha Samriddhi Plus (10,000/- to 15,000/-)  LTV : 85% ROI 2.5% "
                android:id="@+id/textView723"
                android:textSize="12dp"
                android:visibility="gone" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>


</LinearLayout>