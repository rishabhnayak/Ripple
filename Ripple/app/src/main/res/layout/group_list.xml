<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:background="@drawable/ripple">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_pic"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:contentDescription="desc"
        app:civ_border_width="2dp"
        app:civ_border_color="@color/colorAccent"
        android:layout_margin="5dp" />

    <TextView
        android:id="@+id/member_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:textColor="#227200"
        android:textSize="10dp"
        android:layout_toEndOf="@+id/profile_pic"
        android:layout_alignTop="@+id/profile_pic"
        android:layout_toRightOf="@+id/profile_pic"
        android:text="Customer Name"
        android:layout_margin="5dp" />

    <TextView
        android:id="@+id/status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#227200"
        android:textSize="10dp"
        android:text="Customer ID"
        android:layout_alignBottom="@+id/member_name"
        android:layout_alignLeft="@+id/member_name"
        android:layout_alignStart="@+id/member_name" />

    <TextView
        android:id="@+id/contact_typetime"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:textColor="#ffffff"
        android:textSize="16sp"
        android:background="@android:drawable/presence_invisible"
        android:gravity="center"
        android:layout_alignTop="@+id/member_name"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>