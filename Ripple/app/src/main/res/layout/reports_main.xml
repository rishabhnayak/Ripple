<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fhgk"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:background="#ffffff">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="#ffffff"
        android:layout_height="match_parent">
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/scrollView3"
        android:layout_alignRight="@+id/linearLayout"
        android:layout_alignEnd="@+id/linearLayout"
        android:layout_alignParentRight="false"
        android:background="#000000ff"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:foregroundGravity="center"
            android:gravity="center"
            android:background="#00ffffff">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true">

                <mehdi.sakout.fancybuttons.FancyButton
                    android:id="@+id/TaskM2441"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:padding="1dp"
                    fancy:fb_borderColor="#b34645"
                    fancy:fb_borderWidth="4dp"

                    fancy:fb_fontIconResource="@string/icon_cancel"
                    fancy:fb_defaultColor="#00ffffff"
                    fancy:fb_focusColor="#eaeaea"
                    fancy:fb_iconPosition="top"
                    fancy:fb_textColor="#b34645"

                    fancy:fb_fontIconSize="15dp"
                    fancy:fb_radius="50dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_margin="5dp" />
                <mehdi.sakout.fancybuttons.FancyButton
                    android:id="@+id/Taskmax"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:padding="1dp"
                    fancy:fb_borderColor="#248f13"
                    fancy:fb_borderWidth="4dp"

                    fancy:fb_fontIconResource="@string/icon_min"
                    fancy:fb_defaultColor="#00ffffff"
                    fancy:fb_focusColor="#eaeaea"
                    fancy:fb_iconPosition="top"
                    fancy:fb_textColor="#248f13"

                    fancy:fb_fontIconSize="15dp"
                    fancy:fb_radius="50dp"
                    android:layout_alignParentTop="true"
                    android:layout_toLeftOf="@+id/TaskM2441"
                    android:layout_toStartOf="@+id/TaskM2441"
                    android:layout_margin="5dp" />
                <mehdi.sakout.fancybuttons.FancyButton
                    android:id="@+id/Taskmin"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:padding="1dp"
                    fancy:fb_borderColor="#1e74ff"
                    fancy:fb_borderWidth="4dp"

                    fancy:fb_fontIconResource="@string/icon_max"
                    fancy:fb_defaultColor="#00ffffff"
                    fancy:fb_focusColor="#eaeaea"
                    fancy:fb_iconPosition="top"
                    fancy:fb_textColor="#1e74ff"

                    fancy:fb_fontIconSize="15dp"
                    fancy:fb_radius="50dp"
                    android:layout_alignParentTop="true"
                    android:layout_toLeftOf="@+id/Taskmax"
                    android:layout_toStartOf="@+id/Taskmax"
                    android:layout_margin="5dp" />

                <infracom.abcr.sarthamicrofinance.material.widget.ProgressView
                    android:id="@+id/progress_pv_circular_inout_colors"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_gravity="center"
                    app:v_styleId="@array/pv_circular_colors"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true" />

            </RelativeLayout>


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <mehdi.sakout.fancybuttons.FancyButton
                    android:id="@+id/BusinessB"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:padding="10dp"
                    fancy:fb_borderColor="#e9e9e9"
                    fancy:fb_borderWidth="4dp"

                    fancy:fb_fontIconResource="&#xf022;"
                    fancy:fb_defaultColor="#b869da"
                    fancy:fb_focusColor="#FF1E74FF"
                    fancy:fb_iconPosition="top"
                    fancy:fb_text="Business Reports"
                    fancy:fb_textColor="#ffffff"

                    fancy:fb_fontIconSize="50dp"
                    fancy:fb_radius="100dp"
                    android:layout_margin="10dp" />

                <mehdi.sakout.fancybuttons.FancyButton
                    android:id="@+id/BusinessE"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:padding="10dp"
                    fancy:fb_borderColor="#e9e9e9"
                    fancy:fb_borderWidth="4dp"

                    fancy:fb_fontIconResource="&#xf0f6;"
                    fancy:fb_defaultColor="#85ac10"
                    fancy:fb_focusColor="#FF1E74FF"
                    fancy:fb_iconPosition="top"
                    fancy:fb_text="Exception Reports"
                    fancy:fb_textColor="#ffffff"

                    fancy:fb_fontIconSize="50dp"
                    fancy:fb_radius="500dp"
                    android:layout_margin="10dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <mehdi.sakout.fancybuttons.FancyButton
                    android:id="@+id/BusinessT"

                    fancy:fb_fontIconSize="40dp"
                    fancy:fb_borderColor="#e9e9e9"
                    fancy:fb_borderWidth="4dp"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:paddingBottom="10dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingTop="10dp"
                    fancy:fb_defaultColor="#c68804"
                    fancy:fb_focusColor="#FF1E74FF"
                    fancy:fb_fontIconResource="&#xf03c;"
                    fancy:fb_iconPosition="top"
                    fancy:fb_radius="100dp"
                    fancy:fb_text="Trending Reports"
                    fancy:fb_textColor="#FFFFFF"
                    android:layout_margin="10dp" />

                <mehdi.sakout.fancybuttons.FancyButton
                    android:id="@+id/BusinessC"
                    fancy:fb_fontIconSize="40dp"
                    fancy:fb_borderColor="#e9e9e9"
                    fancy:fb_borderWidth="4dp"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:paddingBottom="10dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingTop="10dp"
                    fancy:fb_defaultColor="#5466d1"
                    fancy:fb_focusColor="#FF1E74FF"
                    fancy:fb_fontIconResource="&#xf03c;"
                    fancy:fb_iconPosition="top"
                    fancy:fb_radius="100dp"
                    fancy:fb_text="Critical Reports"
                    fancy:fb_textColor="#FFFFFF"
                    android:layout_margin="10dp" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginBottom="5dp">

                <mehdi.sakout.fancybuttons.FancyButton
                    android:id="@+id/BusinessR"

                    fancy:fb_fontIconSize="40dp"
                    fancy:fb_borderColor="#e9e9e9"
                    fancy:fb_borderWidth="4dp"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:paddingBottom="10dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingTop="10dp"
                    fancy:fb_defaultColor="#04c696"
                    fancy:fb_focusColor="#FF1E74FF"
                    fancy:fb_fontIconResource="&#xf00b;"
                    fancy:fb_iconPosition="top"
                    fancy:fb_radius="100dp"
                    fancy:fb_text="Receivable Reports"
                    fancy:fb_textColor="#FFFFFF" />
            </LinearLayout>


        </LinearLayout>
    </ScrollView>
</LinearLayout>

</LinearLayout>