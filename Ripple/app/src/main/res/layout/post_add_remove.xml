<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fhgk"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:background="#ffffff">

<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="#ffffff"
        android:layout_height="wrap_content">

        <mehdi.sakout.fancybuttons.FancyButton
            android:id="@+id/TaskM2441"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:padding="1dp"
            fancy:fb_borderColor="#b34645"
            fancy:fb_borderWidth="4dp"

            fancy:fb_fontIconResource="@string/icon_cancel"
            fancy:fb_defaultColor="#00ffffff"
            fancy:fb_focusColor="#eaeaea"
            fancy:fb_iconPosition="top"
            fancy:fb_textColor="#b34645"

            fancy:fb_fontIconSize="15dp"
            fancy:fb_radius="50dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_margin="5dp" />
        <mehdi.sakout.fancybuttons.FancyButton
            android:id="@+id/Taskmax"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:padding="1dp"
            fancy:fb_borderColor="#248f13"
            fancy:fb_borderWidth="4dp"

            fancy:fb_fontIconResource="@string/icon_min"
            fancy:fb_defaultColor="#00ffffff"
            fancy:fb_focusColor="#eaeaea"
            fancy:fb_iconPosition="top"
            fancy:fb_textColor="#248f13"

            fancy:fb_fontIconSize="15dp"
            fancy:fb_radius="50dp"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/TaskM2441"
            android:layout_toStartOf="@+id/TaskM2441"
            android:layout_margin="5dp" />
        <mehdi.sakout.fancybuttons.FancyButton
            android:id="@+id/Taskmin"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:padding="1dp"
            fancy:fb_borderColor="#1e74ff"
            fancy:fb_borderWidth="4dp"

            fancy:fb_fontIconResource="@string/icon_max"
            fancy:fb_defaultColor="#00ffffff"
            fancy:fb_focusColor="#eaeaea"
            fancy:fb_iconPosition="top"
            fancy:fb_textColor="#1e74ff"

            fancy:fb_fontIconSize="15dp"
            fancy:fb_radius="50dp"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/Taskmax"
            android:layout_toStartOf="@+id/Taskmax"
            android:layout_margin="5dp" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/scrollView3"
        android:background="#000000ff"
        android:layout_alignRight="@+id/linearLayout"
        android:layout_alignEnd="@+id/linearLayout"
        android:layout_alignParentRight="false"
        android:layout_marginTop="10dp">



        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:foregroundGravity="center"
            android:gravity="center"
            android:background="#00ffffff">


            <mehdi.sakout.fancybuttons.FancyButton
                android:id="@+id/addp"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_marginBottom="20dp"
                android:padding="10dp"
                fancy:fb_borderColor="#e9e9e9"
                fancy:fb_borderWidth="4dp"
                fancy:fb_fontIconResource="&#xf234;"
                fancy:fb_defaultColor="#b869da"
                fancy:fb_focusColor="#FF1E74FF"
                fancy:fb_iconPosition="top"
                fancy:fb_text="Add Sales Person"
                fancy:fb_textColor="#ffffff"

                fancy:fb_fontIconSize="50dp"
                fancy:fb_radius="100dp" />

            <mehdi.sakout.fancybuttons.FancyButton
                android:id="@+id/addDSA"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_marginBottom="20dp"
                android:padding="10dp"
                fancy:fb_borderColor="#e9e9e9"
                fancy:fb_borderWidth="4dp"
                fancy:fb_fontIconResource="&#xf234;"
                fancy:fb_defaultColor="#62ccd4"
                fancy:fb_focusColor="#FF1E74FF"
                fancy:fb_iconPosition="top"
                fancy:fb_text="Add DSA"
                fancy:fb_textColor="#ffffff"

                fancy:fb_fontIconSize="50dp"
                fancy:fb_radius="100dp" />

            <mehdi.sakout.fancybuttons.FancyButton
                android:id="@+id/removep"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_marginBottom="10dp"
                android:padding="10dp"
                fancy:fb_borderColor="#e9e9e9"
                fancy:fb_borderWidth="4dp"

                fancy:fb_fontIconResource="&#xf022;"
                fancy:fb_defaultColor="#85ac10"
                fancy:fb_focusColor="#FF1E74FF"
                fancy:fb_iconPosition="top"
                fancy:fb_text="List"
                fancy:fb_textColor="#ffffff"

                fancy:fb_fontIconSize="50dp"
                fancy:fb_radius="100dp"
                android:layout_marginTop="5dp" />




        </LinearLayout>
    </ScrollView>
</LinearLayout>



</LinearLayout>