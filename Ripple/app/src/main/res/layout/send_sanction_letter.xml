<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scustomet"
        android:layout_below="@+id/view6"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <AutoCompleteTextView
            android:id="@+id/emailPrime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Customer Email ID"
            android:inputType="text"
            android:maxLines="1"
            android:singleLine="true"
            android:textColorHighlight="#176c16"
            android:textColorHint="#176c16"
            android:textColorLink="#176c16"
            android:textColor="#176c16"/>

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scustometk"
        android:layout_below="@+id/view6"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <AutoCompleteTextView
            android:id="@+id/Prime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Insurance Premium(Paid Upfront)"
            android:inputType="numberDecimal"
            android:maxLines="1"
            android:singleLine="true"
            android:textColorHighlight="#176c16"
            android:textColorHint="#176c16"
            android:textColorLink="#176c16"
            android:textColor="#176c16"/>

    </android.support.design.widget.TextInputLayout>
</LinearLayout>