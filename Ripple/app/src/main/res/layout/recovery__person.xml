<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    tools:context="infracom.abcr.sarthamicrofinance.reports.business_reports">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView10" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:layout_below="@+id/relativeLayout1"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:id="@+id/relativeLayout10"
                android:visibility="gone">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/view11"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Recovery"
                        android:id="@+id/textView61"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true" />
                </android.support.v7.widget.CardView>


                <RelativeLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/view11"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="5dp">

                    <EditText
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:inputType="date"
                        android:ems="10"
                        android:id="@+id/editTextB1"
                        android:text="From Date"
                        android:onClick="datapickFrom"
                        android:textSize="15dp"
                        android:layout_alignBottom="@+id/imageView19"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true" />

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:id="@+id/imageView19"
                        android:onClick="datapickFrom"
                        android:background="@drawable/ripple"
                        android:src="@drawable/ic_event_black_24dp"
                        android:layout_alignParentBottom="true"
                        android:layout_toRightOf="@+id/editTextB1"
                        android:layout_toEndOf="@+id/editTextB1"
                        android:layout_margin="4dp" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="To"
                        android:id="@+id/textView80"
                        android:layout_alignTop="@+id/editTextB2"
                        android:layout_centerHorizontal="true" />

                    <EditText
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:inputType="date"
                        android:ems="10"
                        android:id="@+id/editTextB2"
                        android:text="To Date"
                        android:onClick="datapickTo"
                        android:textSize="15dp"
                        android:layout_alignBottom="@+id/imageView19"
                        android:layout_toLeftOf="@+id/imageView20"
                        android:layout_toStartOf="@+id/imageView20" />

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:id="@+id/imageView20"
                        android:onClick="datapickTo"
                        android:src="@drawable/ic_event_black_24dp"
                        android:background="@drawable/ripple"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true" />


                </RelativeLayout>

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="From Date(YYYY/MM/DD) to To Date(YYYY/MM/DD)"
                android:id="@+id/textView78"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="5dp"
                android:layout_gravity="center_horizontal"
                android:textSize="10dp"
                android:visibility="gone" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:id="@+id/view3"
                    android:layout_below="@+id/view2"
                    android:layout_alignParentLeft="true"
                    android:visibility="gone">

                    <AutoCompleteTextView
                        android:id="@+id/inputSearchCHQ"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Search By Cheque No/Customer Name/ID"
                        android:inputType="text"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:textColorHighlight="#FF1E74FF"
                        android:textColorHint="#FF1E74FF"
                        android:textColorLink="#FF1E74FF"
                        android:textColor="#FF1E74FF" />

                </android.support.design.widget.TextInputLayout>


                <infracom.abcr.sarthamicrofinance.material.widget.ProgressView
                    android:id="@+id/progress_pv_circular_inout_colors"
                    android:layout_width="102dp"
                    android:layout_height="102dp"
                    android:layout_gravity="center"
                    app:v_styleId="@array/pv_circular_in_colors"/>


                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="#72c092">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="List Of Assiged Customer"
                        android:id="@+id/textView62"
                        android:textColor="#ffffff"
                        android:layout_marginLeft="5dp" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/inputSearch"
                        android:hint="Search"
                        android:layout_marginLeft="5dp" />
                </LinearLayout>

                <HorizontalScrollView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:id="@+id/horizontalScrollView3" >

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width = "fill_parent"
                        android:layout_height = "fill_parent">

                        <LinearLayout
                            android:id = "@+id/relativeLayout1"
                            android:layout_width = "fill_parent"
                            android:layout_height = "wrap_content"
                            android:background = "#365368"
                            android:layout_below="@+id/relativeLayout10"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_marginTop="5dp">


                            <TextView
                                android:layout_width = "60dp"
                                android:layout_height = "wrap_content"
                                android:layout_weight = "2"
                                android:gravity = "center"
                                android:padding = "5dp"
                                android:text = "No"
                                android:textColor = "#ffffff" />

                            <TextView
                                android:layout_width = "60dp"
                                android:layout_height = "wrap_content"
                                android:gravity = "center"
                                android:padding = "5dp"
                                android:text = "Photo"
                                android:textColor = "#ffffff" />

                            <TextView
                                android:layout_width = "200dp"
                                android:layout_height = "wrap_content"
                                android:layout_weight = "5"
                                android:gravity = "center"
                                android:padding = "5dp"
                                android:text = "Customer Name"
                                android:textColor = "#ffffff"/>


                            <TextView
                                android:layout_width = "200dp"
                                android:layout_height = "wrap_content"
                                android:layout_weight = "5"
                                android:gravity = "center"
                                android:padding = "5dp"
                                android:text = "City"
                                android:textColor = "#ffffff"/>

                            <TextView
                                android:layout_width = "200dp"
                                android:layout_height = "wrap_content"
                                android:layout_weight = "5"
                                android:gravity = "center"
                                android:padding = "5dp"
                                android:text = "Product"
                                android:textColor = "#ffffff" />

                            <TextView
                                android:layout_width = "200dp"
                                android:layout_height = "wrap_content"
                                android:layout_weight = "5"
                                android:gravity = "center"
                                android:padding = "5dp"
                                android:text = "EMI"
                                android:textColor = "#ffffff" />



                            <TextView
                                android:layout_width = "200dp"
                                android:layout_height = "wrap_content"
                                android:layout_weight = "5"
                                android:gravity = "center"
                                android:padding = "5dp"
                                android:textColor = "#ffffff"
                                android:text = "ROI Policy"
                                android:singleLine = "true" />





                            <TextView
                                android:layout_width = "200dp"
                                android:layout_height = "wrap_content"
                                android:layout_weight = "5"
                                android:gravity = "center"
                                android:padding = "5dp"
                                android:textColor = "#ffffff"
                                android:text = "ROI Applied"
                                android:singleLine = "true" />

                            <TextView
                                android:layout_width = "200dp"
                                android:layout_height = "wrap_content"
                                android:layout_weight = "5"
                                android:gravity = "center"
                                android:padding = "5dp"
                                android:text = "LTV Policy"
                                android:textColor = "#ffffff"
                                android:singleLine = "true" />

                            <TextView
                                android:id = "@+id/price7"
                                android:layout_width = "200dp"
                                android:layout_height = "match_parent"
                                android:layout_weight = "5"
                                android:textColor = "#ffffff"
                                android:background = "@drawable/cell_shape"
                                android:ellipsize = "end"
                                android:padding = "5dp"
                                android:text = "LTV Applied"
                                android:singleLine = "true" />


                            <TextView
                                android:layout_width = "200dp"
                                android:layout_height = "wrap_content"
                                android:layout_weight = "5"
                                android:gravity = "center"
                                android:padding = "5dp"
                                android:text = "Paid Amount"
                                android:textColor = "#ffffff" />


                            <TextView
                                android:layout_width = "200dp"
                                android:layout_height = "wrap_content"
                                android:layout_weight = "5"
                                android:gravity = "center"
                                android:padding = "5dp"
                                android:textColor = "#ffffff"
                                android:text = "Installment Date"
                                android:singleLine = "true" />


                            <TextView
                                android:layout_width = "500dp"
                                android:layout_height = "wrap_content"
                                android:layout_weight = "5"
                                android:gravity = "center"
                                android:padding = "5dp"
                                android:textColor = "#ffffff"
                                android:text = "Sales Person"
                                android:singleLine = "true" />

                        </LinearLayout>

                        <ListView
                            android:id = "@+id/listview"
                            android:layout_width = "fill_parent"
                            android:layout_height = "match_parent"
                            android:divider = "@null"
                            android:layout_below="@+id/relativeLayout10"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true" />

                        <ScrollView
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:id="@+id/scrollView13" >

                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="400dp">

                            </LinearLayout>
                        </ScrollView>

                    </LinearLayout>
                </HorizontalScrollView>

            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>


</RelativeLayout>
