<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="8dp"
    android:paddingRight="8dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="180dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


        <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_pic"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:contentDescription="desc"
        app:civ_border_width="2dp"
        app:civ_border_color="@color/colorAccent"
            android:layout_margin="5dp" />

    <TextView
        android:id="@+id/member_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:textColor="#FF1E74FF"
        android:textSize="15sp"
        android:layout_alignTop="@+id/profile_pic"
        android:layout_toLeftOf="@+id/imageView26"
        android:layout_alignLeft="@+id/status"
        android:layout_alignStart="@+id/status" />

    <TextView
        android:id="@+id/status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FF1E74FF"
        android:textSize="16sp"
        android:layout_toLeftOf="@+id/imageView26"
        android:layout_below="@+id/member_name"
        android:layout_toRightOf="@+id/Contact"
        android:layout_toEndOf="@+id/Contact" />

    <TextView
        android:id="@+id/contact_typetime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#32ad02"
        android:text="Depart"
        android:layout_alignTop="@+id/Depart"
        android:layout_toRightOf="@+id/Contact"
        android:layout_toEndOf="@+id/Contact" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Depart : "
                android:id="@+id/Depart"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_margin="5dp" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Address : "
                android:id="@+id/Address"
                android:layout_below="@+id/Contact"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_margin="5dp" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Contact : "
                android:id="@+id/Contact"
                android:layout_below="@+id/Depart"
                android:layout_alignLeft="@+id/Depart"
                android:layout_alignStart="@+id/Depart" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address"
                android:id="@+id/Address23"
                android:layout_alignTop="@+id/Address"
                android:layout_alignLeft="@+id/Mobile"
                android:layout_alignStart="@+id/Mobile" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mobile"
                android:id="@+id/Mobile"
                android:layout_alignTop="@+id/Contact"
                android:layout_toRightOf="@+id/Contact"
                android:layout_toEndOf="@+id/Contact" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/imageView26"
                android:background="@drawable/ic_call_black_24dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>
</android.support.v7.widget.CardView>



</RelativeLayout>