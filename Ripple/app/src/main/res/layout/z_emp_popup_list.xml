<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"

    android:focusable="true"
    android:focusableInTouchMode="true"
    android:layout_height="fill_parent"
    android:background="#ffffff"
    android:weightSum="1"
    >

<RelativeLayout
    android:orientation="vertical"
    android:layout_width="match_parent"

    android:focusable="true"
    android:focusableInTouchMode="true"
    android:layout_height="fill_parent"
    android:background="#ffffff"
    android:weightSum="1">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/linearLayout18"
        android:layout_alignBottom="@+id/TaskM2441"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/TaskM2441"
        android:layout_toStartOf="@+id/TaskM2441"
        android:layout_alignParentTop="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/textPoster"
            android:hint="Search.."
            android:inputType="textVisiblePassword"
            android:text="Assign Recovery"
            android:layout_marginTop="5dp" />


        <mehdi.sakout.fancybuttons.FancyButton
            android:id="@+id/Taskmax"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:padding="1dp"
            fancy:fb_borderColor="#248f13"
            fancy:fb_borderWidth="4dp"

            fancy:fb_fontIconResource="@string/icon_min"
            fancy:fb_defaultColor="#00ffffff"
            fancy:fb_focusColor="#eaeaea"
            fancy:fb_iconPosition="top"
            fancy:fb_textColor="#248f13"

            fancy:fb_fontIconSize="15dp"
            fancy:fb_radius="10dp"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/TaskM2441"
            android:layout_toStartOf="@+id/TaskM2441"
            android:layout_margin="5dp"
            android:visibility="gone" />
        <mehdi.sakout.fancybuttons.FancyButton
            android:id="@+id/Taskmin"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:padding="1dp"
            fancy:fb_borderColor="#1e74ff"
            fancy:fb_borderWidth="4dp"

            fancy:fb_fontIconResource="@string/icon_max"
            fancy:fb_defaultColor="#00ffffff"
            fancy:fb_focusColor="#eaeaea"
            fancy:fb_iconPosition="top"
            fancy:fb_textColor="#1e74ff"

            fancy:fb_fontIconSize="15dp"
            fancy:fb_radius="10dp"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/Taskmax"
            android:layout_toStartOf="@+id/Taskmax"
            android:layout_margin="5dp"
            android:visibility="gone" />

    </LinearLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/inputSearch"
        android:hint="Search"
        android:textColor="@color/colorAccent"
        android:textColorHint="@color/colorAccent"
        android:layout_below="@+id/TaskM2441"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <ListView
        android:id="@+id/listViewtotalCC"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:alwaysDrawnWithCache="true"
        android:dividerHeight="1dp"
        android:horizontalSpacing="3dp"
        android:scrollingCache="true"
        android:smoothScrollbar="true"
        android:stretchMode="columnWidth"
        android:verticalSpacing="3dp"
        android:layout_weight="0.02"
        android:layout_below="@+id/inputSearch">
    </ListView>

    <infracom.abcr.sarthamicrofinance.material.widget.ProgressView
        android:id="@+id/progress_pv_circular_inout_colors"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_gravity="center"
        app:v_styleId="@array/pv_circular_colors"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <mehdi.sakout.fancybuttons.FancyButton
        android:id="@+id/TaskM2441"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:padding="1dp"
        fancy:fb_borderColor="#b34645"
        fancy:fb_borderWidth="4dp"

        fancy:fb_fontIconResource="@string/icon_cancel"
        fancy:fb_defaultColor="#00ffffff"
        fancy:fb_focusColor="#eaeaea"
        fancy:fb_iconPosition="top"
        fancy:fb_textColor="#b34645"

        fancy:fb_fontIconSize="15dp"
        fancy:fb_radius="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="5dp" />


</RelativeLayout>
</LinearLayout>