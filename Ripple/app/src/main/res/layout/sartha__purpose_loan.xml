<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="infracom.abcr.sarthamicrofinance.CATEGORIES.Sartha_Purpose_loan">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/scrollView11"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Loan Type"
                android:id="@+id/typ"
                android:gravity="center"
                android:textSize="18dp" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/textView79"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp" />


            <RadioGroup
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">

                <RadioButton
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:text="Personal Loan"
                    android:id="@+id/radioButton"
                    android:background="#2dbb95"
                    android:layout_marginTop="15dp"
                    android:textColor="#ffffff"
                    android:checked="false"
                    android:textSize="20dp" />

                <RadioButton
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:text="Wedding Loan"
                    android:id="@+id/radioButton2"
                    android:background="#42a2ce"
                    android:layout_marginTop="15dp"
                    android:textColor="#ffffff"
                    android:checked="false"
                    android:textSize="20dp" />

                <RadioButton
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:text="Education Loan"
                    android:id="@+id/radioButton3"
                    android:background="#34b23a"
                    android:layout_marginTop="15dp"
                    android:textColor="#ffffff"
                    android:checked="false"
                    android:textSize="20dp" />

                <RadioButton
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:text="Other Loan"
                    android:id="@+id/radioButton4"
                    android:background="#c2982f"
                    android:layout_marginTop="15dp"
                    android:textColor="#ffffff"
                    android:checked="false"
                    android:textSize="20dp" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/othertyp"
                    android:layout_marginTop="5dp"
                    android:hint="Other Type" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Next"
                    android:id="@+id/Next"
                    android:layout_gravity="right" />

            </RadioGroup>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
