                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/view5"
                        android:layout_below="@+id/linearLayout15"
                        android:layout_toEndOf="@+id/imageViewC"
